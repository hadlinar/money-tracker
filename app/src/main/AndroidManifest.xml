<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.MainActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.RegisterActivity">
        </activity>
        <activity
            android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.CreateTransactionActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.ListTransactionActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.DetailTransactionActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.TimeoutActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.ListDebtActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.DetailDebtActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.CreateDebtActivity">
        </activity>
        <activity android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.view.NewAccountBalanceActivity">
        </activity>

        <receiver android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.utils.TimeoutReceiver">
            <intent-filter>
                <action android:name="SESSION_TIMEOUT"/>
            </intent-filter>
        </receiver>

        <service android:name="id.ac.ui.cs.mobileprogramming.hadlina.moneytracker.utils.TimeoutService">
        </service>
    </application>

</manifest>